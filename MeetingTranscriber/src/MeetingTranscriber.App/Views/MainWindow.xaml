<Window x:Class="MeetingTranscriber.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:MeetingTranscriber.ViewModels"
        mc:Ignorable="d"
        Title="Meeting Transcriber"
        Height="700"
        Width="1000"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar with Settings -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Meeting Transcriber"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Command="{Binding OpenHistoryCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Sessie Geschiedenis"
                        Margin="0,0,8,0">
                    <materialDesign:PackIcon Kind="History"/>
                </Button>

                <Button Command="{Binding OpenSettingsCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Instellingen">
                    <materialDesign:PackIcon Kind="Cog"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Device Selection Row -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Microphone Selection -->
            <materialDesign:Card Grid.Column="0" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Microphone" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Microfoon" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>
                    <ComboBox ItemsSource="{Binding DeviceSelector.InputDevices}"
                              SelectedItem="{Binding DeviceSelector.SelectedInputDevice}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Selecteer microfoon"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <ProgressBar Value="{Binding DeviceSelector.InputLevel, Mode=OneWay}"
                                 Maximum="1"
                                 Height="8"
                                 Margin="0,8,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- System Audio Selection -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Systeemaudio" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    </StackPanel>
                    <ComboBox ItemsSource="{Binding DeviceSelector.OutputDevices}"
                              SelectedItem="{Binding DeviceSelector.SelectedOutputDevice}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Selecteer audio output"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <ProgressBar Value="{Binding DeviceSelector.OutputLevel, Mode=OneWay}"
                                 Maximum="1"
                                 Height="8"
                                 Margin="0,8,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Recording Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding StartCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"
                        Background="{DynamicResource PrimaryHueMidBrush}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="RecordCircle" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Start"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding PauseCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="{Binding IsPaused, Converter={StaticResource BoolToPlayPauseIconConverter}}"
                                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding IsPaused, Converter={StaticResource BoolToPauseResumeTextConverter}}"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding StopCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,24,0"
                        Background="{DynamicResource MaterialDesignValidationErrorBrush}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Stop"/>
                    </StackPanel>
                </Button>

                <!-- Recording indicator -->
                <Border Background="{Binding IsRecording, Converter={StaticResource BoolToRecordingBrushConverter}}"
                        CornerRadius="8"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="12" Height="12"
                                 Fill="Red"
                                 Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding RecordingDuration}"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Transcript Area -->
        <materialDesign:Card Grid.Row="3" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Live Transcript"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,0,0,8"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Transcript.Segments}"
                         x:Name="TranscriptListBox"
                         VirtualizingPanel.ScrollUnit="Pixel"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,8">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                               Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                               FontWeight="Medium"
                                               Margin="0,0,16,0"/>
                                    <TextBlock Text="{Binding Speaker}"
                                               Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                                               FontWeight="Medium"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Opacity="{Binding IsFinal, Converter={StaticResource BoolToOpacityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </materialDesign:Card>

        <!-- Summary Area (collapsible) -->
        <Expander Grid.Row="4"
                  Header="Samenvatting"
                  Margin="0,16,0,0"
                  IsExpanded="{Binding Summary.SummaryText, Converter={StaticResource StringNotEmptyToBoolConverter}}">
            <materialDesign:Card Padding="16" Margin="0,8,0,0">
                <Grid>
                    <TextBox Text="{Binding Summary.SummaryText}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="100"
                             MaxHeight="200"
                             IsReadOnly="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Visibility="{Binding Summary.IsGenerating, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding Summary.IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True"
                                     Width="32" Height="32"/>
                        <TextBlock Text="Samenvatting genereren..."
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Expander>

        <!-- Bottom Action Bar -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding StatusMessage}"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialDesign.Brush.Foreground.Light}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Command="{Binding GenerateSummaryCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Robot" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Genereer Samenvatting"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ExportMarkdownCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Export MD"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
